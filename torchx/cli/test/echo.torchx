"""
description: Echos a message
arguments:
  - name: --msg
    help: Message to echo
    default: "hello world"
    type: str
"""


import torchx.specs as specs


echo = specs.Role(
    name="echo",
    entrypoint="/bin/echo",
    args=[args.msg],
    container=specs.Container(image="/tmp"),
    num_replicas=1,
)

app = specs.AppDef(name="echo_job", roles=[echo])

export(app)
